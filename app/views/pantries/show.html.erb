<div class="pantry">
  <div class="container">
    <div class="dispense-page">
      <h1 id="l">Pantry</h1>
      <h2>Save the ingredients you have available, so you can access them later!</h2>



      <%= simple_form_for :search, url: pantry_pantry_inclusions_path(@pantry), method: :post do |f| %>
        <div class="search-form-control">
          <% collection = @ingredient_groups.map { |ing| [ing.name, ing.id, @pantry.ingredient_groups.include?(ing) ? {"selected" => "selected"} : ""] } %>
          <%= f.input :multiple_search, collection: collection, input_html: { multiple: true, class: "select2-form search-form-control", include_blank: false }, label: false %>
          <br>
          <button name="button" type="submit" class="button-search btn">
            Save!
          </button>
        </div>
      <% end %>

      <%= link_to 'Show me recipes I can do!', recipes_path(search: {multiple_search: @ingredient_group_ids}), class: "button-pantries" %>
    </div>
  </div>
</div>
