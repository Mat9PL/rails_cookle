<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "/" do %>
    <% end %>
    <!-- <span class="navbar-toggler-icon"></span> -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "/", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My cookbook", cookbook_path(current_user.id), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My pantry", dispense_path(current_user.id), class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% avatar_url = current_user.facebook_picture_url || "logo avatar.png" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "View Later Recipes", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
