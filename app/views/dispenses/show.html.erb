<div class="container">
  <div class="ingredients-page">
    <h1>My dispense</h1>
    <h2>Save the ingredients you have available, so you can access them later!</h2>



    <%= simple_form_for :search, url: dispense_dispense_inclusions_path(@dispense), method: :post do |f| %>
      <div class="search-form-control">
        <% collection = @ingredient_groups.map { |ing| [ing.name, ing.id, @dispense.ingredient_groups.include?(ing) ? {"selected" => "selected"} : ""] } %>
        <%= f.input :multiple_search, collection: collection, input_html: { multiple: true, class: "select2-form search-form-control", include_blank: false }, label: false %>
        <br>
        <button name="button" type="submit" class="button-search btn btn-flat">
          Save!
        </button>
      </div>
    <% end %>


  </div>
</div>